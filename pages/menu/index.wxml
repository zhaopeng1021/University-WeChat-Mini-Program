<scroll-view scroll-y class="left">
  <block wx:for="{{categories}}">
    <view class="category-item {{currentIndex==index?'category-item-active':''}}" data-index='{{index}}' data-id='s{{item.id}}' bindtap='onCategoryClick'>
      <text>{{item.name}}</text>
    </view>
  </block>
</scroll-view>
<scroll-view scroll-y class="right" scroll-into-view="{{contentActive}}" bindscroll="onScroll">
 <view class="goods-container" wx:for="{{goodsWrap}}" wx:key="id">
    <view class="goodsWrap-category" id="{{'s'+item.id}}">
      <text>{{item.name}}</text>
    </view>

    <block wx:for="{{item.goods}}" wx:for-item="goods" wx:key="id">
      <view class='goods-item'>
        <image class='goods-pic' mode="aspectFill" lazy-load="true" src="{{goods.pic}}"></image>
        <view class='goods-info'>
          <text class="goodsName">{{goods.name}}</text>
          <text class="goodsPrice">ï¿¥{{goods.minPrice}}</text>
        </view>
      </view>
    
  </block>
  <view style="height:200px"></view>
  </view>
</scroll-view>